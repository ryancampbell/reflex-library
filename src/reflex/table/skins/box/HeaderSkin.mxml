<?xml version="1.0" encoding="utf-8"?>
<rx:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:rx="http://rx.reflex.io/2010">
	
	<rx:Rect width="{ width }" height="{ height }">
		<rx:fill>
			<s:SolidColor color="#B9C9FE" />
		</rx:fill>
	</rx:Rect>
	
	<rx:Rect y="-4" width="{ width }" height="4">
		<rx:fill>
			<s:SolidColor color="#AABCFE" />
		</rx:fill>
	</rx:Rect>
	
	<rx:Container id="container" />
	
</rx:Skin>
