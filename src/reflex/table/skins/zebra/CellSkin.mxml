<?xml version="1.0" encoding="utf-8"?>
<rx:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:rx="http://rx.reflex.io/2010">
	
	<rx:states>
		<s:State name="selected" />
		<s:State name="selectedUp" basedOn="selected" />
		<s:State name="selectedOver" basedOn="selected" />
		<s:State name="selectedDown" basedOn="selected" />
	</rx:states>
	
	<rx:Rect width="{ width }" height="{ height }" alpha.selected=".5">
		<rx:fill>
			<s:SolidColor color="{ Object( target ).index % 2 == 0 ? 0xE8EDFF : 0xEFF2FF }" />
		</rx:fill>
	</rx:Rect>
	
	<rx:Label id="label" fontFamily="Helvetica" fontSize="12" color="#666699" padding="10" />
	
</rx:Skin>
