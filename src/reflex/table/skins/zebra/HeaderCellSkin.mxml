<?xml version="1.0" encoding="utf-8"?>
<rx:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	xmlns:rx="http://rx.reflex.io/2010">
	
	<rx:Rect width="{ width }" height="{ height }">
		<rx:fill>
			<s:SolidColor color="{ Object( target ).index % 2 == 0 ? 0xD0DAFD : 0xDCE4FF }" />
		</rx:fill>
	</rx:Rect>
	
	<rx:Label id="label" fontFamily="Helvetica" fontSize="16" color="#003399" padding="10" />
	
</rx:Skin>
